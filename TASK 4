class Book:
    def __init__(self, title, author, year_published):
        self.title = title
        self.author = author
        self.year_published = year_published
    def describe(self):
        print(f"Book Details:\nTitle: {self.title}\nAuthor: {self.author}\nYear Published: {self.year_published}")
# Create three book objects
book1 = Book("BROKEN WINGS", "SAROJINE NAIDU", 1985)
book2 = Book("ARTHASHASTRA", "KAUTILYA", 1992)
book3 = Book("ARJON AND THE DOLPHIN", "VIKRAM SETH", 1938)
# Display their details
book1.describe()
print()  # Print a newline for better readability
book2.describe()
print()  # Print a newline for better readability
book3.describe()
